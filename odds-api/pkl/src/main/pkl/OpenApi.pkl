@ModuleInfo { minPklVersion = "0.25.1" }
module OddsApi

import "package://pkg.pkl-lang.org/pkl-pantry/org.openapis.v3@1.0.0#/Schema.pkl"

openapi: String
info: Info
paths: Mapping<String, Path>

class Info {
  title: String
  version: String
}

class Path {
  get: GetOperation
}

class GetOperation {
  operationId: String
  parameters: Listing<Parameter>
  responses: Mapping<String, Response>
  tags: Listing<String>
}

class Parameter {
  name: String
  `in`: String
  schema: Schema
}

class Response {
  description: String?
  content: Mapping<String, ResponseContent>
}
class ResponseContent {
  schema: Schema
}

output {
  renderer = new YamlRenderer {}
}
